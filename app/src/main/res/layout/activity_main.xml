<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#251147"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcador de Truco"
        android:layout_marginBottom="150dp"
        android:textColor="#ffffff"
        android:fontFamily="serif"
        android:textSize="30dp"/>



    <TextView
        android:id="@+id/txtPontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="-130dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 1"
        android:onClick="Adicionar1"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:background="#440b3e"
        android:layout_marginRight="-10dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 3"
        android:onClick="Adicionar3"
        tools:ignore="OnClick"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:layout_marginRight="-10dp"
        android:background="#440b3e"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 6"
        android:onClick="Adicionar6"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:layout_marginRight="-10dp"
        android:background="#440b3e"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 9"
        android:onClick="Adicionar9"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:layout_marginRight="-10dp"
        android:background="#440b3e"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 12"
        android:onClick="Adicionar12"
        android:textColor="#ffffff"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-10dp"
        android:background="#440b3e"/>
</LinearLayout>